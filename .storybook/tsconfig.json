{
  "include": ["../src/**/*.ts", "../src/**/*.tsx", "../stories/**/*.js"],
  "compilerOptions": {
    "lib": ["dom", "es6", "es2015.promise"],
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "experimentalDecorators": true,
    "experimentalOptionalChaining": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "typeRoots": ["./src/types"],
    "types": []
  }
}
