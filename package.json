{
  "name": "vue-space",
  "version": "0.1.3",
  "description": "A simple vue ui framework",
  "author": {
    "name": "Kunduin",
    "email": "Kunduin@outlook.com",
    "url": "https://github.com/Kunduin"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-bundle": "vue-cli-service build --target lib --name space ./src/components/index.js",
    "build:storybook": "vue-cli-service build:storybook -c config/storybook",
    "doc": "docsify serve docs",
    "publish": "npm run build-bundle && npm publish --access public",
    "serve:storybook": "vue-cli-service serve:storybook -p 6006 -c config/storybook"
  },
  "dependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@storybook/addon-actions": "4.0.0-alpha.20",
    "@storybook/addon-links": "4.0.0-alpha.20",
    "@storybook/vue": "^3.4.11",
    "@vue/cli-plugin-babel": "^3.0.4",
    "@vue/cli-plugin-eslint": "^3.0.4",
    "@vue/cli-service": "^3.0.4",
    "@vue/eslint-config-standard": "^3.0.4",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^2.7.0",
    "lint-staged": "^7.3.0",
    "node-sass": "^4.9.3",
    "prettier": "^1.14.3",
    "sass-loader": "^7.1.0",
    "vue-cli-plugin-storybook": "^0.4.8",
    "vue-template-compiler": "^2.5.17"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "homepage": "https://github.com/Kunduin/vue-space",
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "main": "dist/space.common.js"
}
