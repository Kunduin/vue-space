{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["dom", "es6", "es2015.promise"],
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true
  }
}
